{
    "plugins": [
        "stylelint-order"
    ],
    "extends": [
        "stylelint-config-prettier"
    ],
    "rules": {
        "value-no-vendor-prefix": true,
        "color-named": "never",
        "color-hex-length": "short",
        "color-hex-case": "lower",
        "color-no-invalid-hex": true,
        "function-comma-space-after": "always-single-line",
        "function-comma-space-before": "never",
        "number-leading-zero": "always",
        "string-quotes": "double",
        "number-max-precision": 2,
        "unit-case": "lower",
        "unit-no-unknown": true,
        "block-no-empty": true,
        "comment-no-empty": true,
        "property-case": "lower",
        "declaration-bang-space-after": "never",
        "declaration-no-important": true,
        "block-closing-brace-space-before": "always-single-line",
        "indentation": 4,
        "max-nesting-depth": 4,
        "no-duplicate-selectors": true,
        "no-extra-semicolons": true,
        "order/order": [
            "custom-properties",
            "declarations"
        ],
        "order/properties-order": [
            "position",
            "top",
            "right",
            "bottom",
            "left",
            "z-index",
            "display",
            "direction",
            "float",
            "clear",
            "flex",
            "flex-grow",
            "flex-shrink",
            "flex-basis",
            "flex-flow",
            "flex-direction",
            "flex-wrap",
            "align-content",
            "align-items",
            "align-self",
            "justify-content",
            "order",
            "table-layout",
            "border-collapse",
            "border-spacing",
            "empty-cells",
            "vertical-align",
            "box-sizing",
            "width",
            "min-width",
            "max-width",
            "height",
            "min-height",
            "max-height",
            "margin",
            "margin-top",
            "margin-right",
            "margin-bottom",
            "margin-left",
            "padding",
            "padding-top",
            "padding-right",
            "padding-bottom",
            "padding-left",
            "overflow",
            "columns",
            "column-gap",
            "column-fill",
            "column-rule",
            "column-span",
            "column-count",
            "column-width",
            "background",
            "background-color",
            "background-image",
            "background-repeat",
            "background-position",
            "background-attachment",
            "background-clip",
            "background-size",
            "border",
            "border-top",
            "border-right",
            "border-bottom",
            "border-left",
            "border-width",
            "border-top-width",
            "border-right-width",
            "border-bottom-width",
            "border-left-width",
            "border-style",
            "border-top-style",
            "border-right-style",
            "border-bottom-style",
            "border-left-style",
            "border-color",
            "border-top-color",
            "border-right-color",
            "border-bottom-color",
            "border-left-color",
            "border-radius",
            "border-top-left-radius",
            "border-top-right-radius",
            "border-bottom-left-radius",
            "border-bottom-right-radius",
            "outline",
            "outline-color",
            "outline-offset",
            "outline-style",
            "outline-width",
            "list-style",
            "box-shadow",
            "color",
            "font",
            "font-family",
            "font-size",
            "font-style",
            "font-smoothing",
            "font-variant",
            "font-weight",
            "line-height",
            "text-align",
            "text-decoration",
            "text-indent",
            "text-overflow",
            "text-rendering",
            "text-shadow",
            "text-transform",
            "text-wrap",
            "white-space",
            "letter-spacing",
            "word-spacing",
            "transform",
            "transform-box",
            "transform-origin",
            "transform-style",
            "transition",
            "transition-delay",
            "transition-duration",
            "transition-property",
            "transition-timing-function",
            "animation",
            "animation-name",
            "animation-duration",
